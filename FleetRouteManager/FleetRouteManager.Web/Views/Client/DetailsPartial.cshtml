<div class="text center" style="width: 100%; margin: 0; text-align:center">
    <h1 style="font-family: Arial; font-weight:bolder">
        @Model.Name
    </h1>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Main Information</h5>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.PhoneNumber</td>
                <td>@Model.ContactEmail</td>
                <td>@Model.Address</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Legal Information</h5>
                <th scope="col">Legal Name</th>
                <th scope="col">VAT/TAX Number</th>
                <th scope="col">Legal Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.LegalName</td>
                <td>@Model.TaxNumber</td>
                <td>@Model.LegalAddress</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Communication Details</h5>
                <th scope="col">Email for payment requests</th>
                <th scope="col">Email for sending PODs</th>
                <th scope="col">Email for sending invoices</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.PaymentEmail</td>
                <td>@Model.PodEmail</td>
                <td>@Model.InvoicingEmail</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <th scope="col">Postal Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.PostalLocation</td>
            </tr>
        </tbody>
    </table>
</div>