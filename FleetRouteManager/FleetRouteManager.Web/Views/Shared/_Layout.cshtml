<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FleetRouteManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FleetRouteManager.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FleetRouteManager - "Company Name"</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="display: flex; padding: 1rem;">
        @if (User.Identity.IsAuthenticated)
        {
            <style>
                .nav-link:hover {
                    font-weight: bolder;
                    font-size: 20px;
                }
            </style>
            <aside class="sidebar" style="width: 200px; background-color: #f8f9fa; padding: 1rem;">
                <h4 class="sidebar-title">Navigation</h4>
                <nav class="flex-column" style="font-weight: bold;">
                    <a class="nav-link" asp-controller="Vehicle" asp-action="Index">Vehicles</a>
                    <a class="nav-link" asp-controller="Driver" asp-action="Index">Drivers</a>
                    <a class="nav-link" asp-controller="Trip" asp-action="Index">Trips</a>
                    <a class="nav-link" asp-controller="Client" asp-action="Index">Clients</a>
                </nav>
            </aside>
        }

        <main role="main-content" style="flex-grow: 1; margin-left: 16px; padding: 1rem;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - @(DateTime.Now.Year != 2024 ? $"{DateTime.Now.Year}" : "")
            FleetRouteManager - "Company Name"
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
