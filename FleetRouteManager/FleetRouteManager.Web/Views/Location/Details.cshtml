@model LocationDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

@if (TempData["LocationSucceed"] != null)
{
    <div class="alert alert-success" style="text-align: center; width: 100%; margin: 0">
        <h5><strong style="color:darkred">@TempData["LocationSucceed"]</strong></h5>
    </div>
}

<div class="text center" style="width: 100%; margin: 0; text-align:center">
    <h1 style="font-family: Arial; font-weight:bolder">
        @Model.Name
    </h1>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Information</h5>
                <th scope="col">Street</th>
                <th scope="col">Street Number</th>
                <th scope="col">Post Code</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Phone Number</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.StreetName</td>
                <td>@Model.StreetNumber</td>
                <td>@Model.PostCode</td>
                <td>@Model.City</td>
                <td>@Model.Country</td>
                <td>@Model.PhoneNumber</td>
            </tr>
        </tbody>
    </table>
    <div class="text center" style="width: 100%; margin: 0">
        <div style="display: inline-flex; column-gap: 5px">
            <a asp-action="Index" asp-controller="Location" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-primary">Back</a>
            @*             @if (User.IsInRole("Admin"))
            { *@
            <a asp-action="Edit" asp-controller="Location" asp-route-id="@Model.Id" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-controller="Location" asp-route-id="@Model.Id" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-danger">Delete</a>
            @* } *@
        </div>
    </div>
</div>