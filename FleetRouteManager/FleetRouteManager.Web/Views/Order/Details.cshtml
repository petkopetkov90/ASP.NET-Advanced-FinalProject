@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Details";
}
@if (TempData["OrderError"] != null)
{
    <div class="alert alert-danger" style="text-align: center; width: 100%; margin: 0">
        <h5><strong style="color:black">@TempData["OrderError"]</strong></h5>
    </div>
}
@if (TempData["OrderSucceed"] != null)
{
    <div class="alert alert-success" style="text-align: center; width: 100%; margin: 0">
        <h5><strong style="color:black">@TempData["OrderSucceed"]</strong></h5>
    </div>
}

<div class="text center" style="width: 100%; margin: 0; text-align:center">
    <h1 style="font-family: Arial; font-weight:bolder">
        @Model.OrderNumber
    </h1>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Information</h5>
                <th style="padding: 15px" scope="col">Order Date</th>
                <th style="padding: 15px" scope="col">Amount</th>
                <th style="padding: 15px" scope="col">Created by</th>
                <th style="padding: 15px" scope="col">Client</th>
                <th style="padding: 15px" scope="col">Trip</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="padding: 15px">@Model.OrderDate</td>
                <td style="padding: 15px">@Model.Amount EURO</td>
                <td style="padding: 15px">@Model.User</td>
                <td style="padding: 15px">@Model.Client</td>
                <td style="padding: 15px">@Model.Trip</td>
            </tr>
        </tbody>
    </table>
    <div class="text center" style="width: 100%; margin: 0">
        <div style="display: inline-flex; column-gap: 5px">
            <a asp-action="Index" asp-controller="Order" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-primary">Back</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {
                <a asp-action="Edit" asp-controller="Order" asp-route-id="@Model.Id" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Order" asp-route-id="@Model.Id" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-danger">Delete</a>
            }
        </div>
    </div>
</div>