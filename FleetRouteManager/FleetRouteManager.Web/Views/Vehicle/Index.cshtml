@model ICollection<VehicleViewModel>

@{
    ViewData["Title"] = "Trucks";
}
<div>
    <table class="table table-striped table-hover table-borderless">
        <thead>
            <tr>
                <th scope="col">Registration Number</th>
                <th scope="col">VIN</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Model</th>
                <th scope="col">First Registration</th>
                <th scope="col">Euro class</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <th>@vehicle.RegistrationNumber</th>
                    <td>@vehicle.Vin</td>
                    <td>@vehicle.Manufacturer</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.FirstRegistrationDate</td>
                    <td>@vehicle.EuroClass</td>
                    <td>
                        <a asp-action="Details" asp-controller="Vehicle" asp-route-id="@vehicle.Id" class="btn btn-primary">Details</a>
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-controller="Vehicle" asp-route-id="@vehicle.Id" class="btn btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
        </tfoot>
    </table>
    <a asp-action="Add" asp-controller="Vehicle" class="btn btn-primary">Add new Vehicle</a>
</div>