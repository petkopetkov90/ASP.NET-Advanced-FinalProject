@model DriverDetailsViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="text center" style="width: 100%; margin: 0; text-align:center">
    <h1 style="font-family: Arial; font-weight:bolder">
        @Model.FirstName @Model.MiddleName @Model.LastName
    </h1>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Main Information</h5>
                <th scope="col">Phone</th>
                <th scope="col">Vehicle</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Employed on</th>
                <th scope="col">Personal Identification Number</th>
                <th scope="col">Additional phone</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.PhoneNumber</td>
                <td>@Model.Vehicle</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.EmployedOn</td>
                <td>@Model.PersonalIdentificationNumber</td>
                <td>@Model.AdditionalPhoneNumber</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <h5 style="font-style: italic; text-decoration-line: underline">Insurance and Certificates</h5>
                <th scope="col">Identity Card</th>
                <th scope="col">Driving License</th>
                <th scope="col">Professional Qualification</th>
                <th scope="col">Medical Insurance</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdentityCard</td>
                <td>@Model.DrivingLicense</td>
                <td>@Model.ProfessionalQualificationCard</td>
                <td>@Model.MedicalInsurance</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover table-bordered" style="text-align: center; width: 100%">
        <thead style="font-style: italic; text-decoration: underline">
            <tr>
                <th scope="col">Identity Card expires on</th>
                <th scope="col">Driving License expires on</th>
                <th scope="col">Professional Qualification expires on</th>
                <th scope="col">Medical Insurance expires on</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdentityCardExpirationDate</td>
                <td>@Model.DrivingLicenseExpirationDate</td>
                <td>@Model.ProfessionalQualificationCardExpirationDate</td>
                <td>@Model.MedicalInsuranceExpirationDate</td>
            </tr>
        </tbody>
    </table>
    <div class="text center" style="width: 100%; margin: 0">
        <div style="display: inline-flex; column-gap: 5px">
            <a asp-action="Index" asp-controller="Driver" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-primary">Back</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {
                <a asp-action="Edit" asp-controller="Driver" asp-route-id="@Model.Id" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Driver" asp-route-id="@Model.Id" style="display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; width: 100px; height: 40px" class="btn btn-danger">Delete</a>
            }
        </div>
    </div>
</div>